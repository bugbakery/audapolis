{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "jsx": "react",
    "paths": {
      "*": ["node_modules/*"]
    },
    "target": "ES6",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.generator"
    ]
  },
  "include": [
    "src/**/*",
    "custom.d.ts",
  ]
}
